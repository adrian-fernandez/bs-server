<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
        <h1 class="logo-name"></h1>
    </div>
    <h3>Welcome to BS Server</h3>
    <p><%=t('devise.fields.login')%></p>
    <%= form_for resource, as: resource_name, url: session_path(resource_name), method: :post, html: { class: 'm-t', role: 'form' } do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('devise.fields.email'), required: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: t('devise.fields.password'), required: true %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, t('devise.fields.remember_me') %>
        </div>
      <% end -%>

      <button type="submit" class="btn btn-primary block full-width m-b"><%=t('devise.fields.login')%></button>

      <a href="<%=new_user_password_url%>"><small><%=t('devise.fields.forgot_password')%></small></a>
      <p class="text-muted text-center"><small><%=t('devise.fields.not_account')%></small></p>
      <a class="btn btn-sm btn-white btn-block" href="<%= new_user_registration_url %>"><%=t('devise.fields.create_account')%></a>
    <% end %>
    <p class="m-t"> <small><%=t('general.footer')%></small> </p>
  </div>
</div>
