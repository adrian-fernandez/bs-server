<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <div>
        <h1 class="logo-name"></h1>
    </div>
    <h3><%=t('devise.fields.sign_up')%></h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post, class: 'm-t', role: 'form' }) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, placeholder: t('devise.fields.email'), autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder: t('devise.fields.password') %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: t('devise.fields.password_confirmation') %>
      </div>
      <button type="submit" class="btn btn-primary block full-width m-b"><%=t('devise.fields.sign_up')%></button>
    <% end %>

    <p class="m-t"> <small><%= render "devise/shared/links" %></small> </p>
    <p class="m-t"> <small><%=t('general.footer')%></small> </p>
  </div>
</div>



